<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCF9FC"
    android:orientation="vertical"
    tools:context=".Cleantopya.app.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_weight="1"
        android:background="#A9CFFAFF"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Cleantopya"
        android:textAllCaps="false"
        android:textColor="#A3F6CC4C"
        android:textSize="60sp"
        android:textStyle="bold" />

    <VideoView
        android:id="@+id/startVideo"
        android:layout_width="match_parent"
        android:layout_height="456dp" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#408BC34A"
        android:fontFamily="monospace"
        android:includeFontPadding="true"
        android:padding="20dp"
        android:text="@string/gameStart"
        android:textColor="#FF9800"
        android:textSize="24sp"
        android:textStyle="bold" />


</LinearLayout>